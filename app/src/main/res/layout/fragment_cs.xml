<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context="com.example.amrizalns.backind.Fragment_cs"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="15dp"
        android:background="#00BCD4"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_email"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_below="@id/img"
            android:id="@+id/txt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Your aspirations about the app help us to support the change of application development to be better"
            android:textColor="#FFFFFF"
            />

        <EditText
            android:layout_below="@+id/txt"
            android:layout_margin="10dp"
            android:id="@+id/field_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Leave comment here ..."
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:textCursorDrawable="@color/button"
            android:textColorHint="@color/button"
            android:backgroundTint="@color/button"
            android:textColor="@color/button"
            android:scrollHorizontally="false"
            android:textSize="16sp"
            />

        <Button
            android:layout_below="@+id/field_body"
            android:id="@+id/fab_submit_post"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Finish"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"

            android:textSize="16sp"
            android:background="@drawable/btn_setting_help"
            />
        <LinearLayout
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fab_submit_post"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_below="@id/fab_submit_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>
            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="80dp"
                />
        </LinearLayout>

        <Button
            android:layout_below="@+id/or"
            android:id="@+id/fab_submit_call"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Call"
            android:textAllCaps="false"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="16sp"
            android:background="@drawable/btn_setting_help"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2017 All Rights Reserved"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#464646"
            />

    </LinearLayout>



</RelativeLayout>
