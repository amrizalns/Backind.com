<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_interface"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/line1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/titlee"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/backind_title"
            />
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!--<fragment android:id="@+id/place_autocomplete_fragment"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_width="310dp"-->
                <!--android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"-->
                <!--&gt;-->
            <!--</fragment>-->

            <EditText
                android:layout_width="220dp"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:hint="Where are you go ?"
                android:textColorHint="#424242"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#424242"
                android:id="@+id/txt_search"
                />

            <ImageButton
                android:layout_width="70dp"
                android:layout_height="37dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_placeholder"
                android:textAllCaps="false"
                android:textColor="#424242"
                android:textSize="14sp"
                android:id="@+id/btn_search"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1"
        android:id="@+id/line2"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#FFFFFF"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_headline"
            android:layout_margin="15dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:text="Choose your interest"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#424242"

                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_activities"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activities"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_hotel"
                    android:layout_gravity="center"
                    android:id="@+id/menu_hotel"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotels"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_attraction"
                    android:layout_gravity="center"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attractions"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_food"
                    android:layout_gravity="center"
                    android:id="@+id/menu_foods"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Foods"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_footer"
            android:gravity="center"
            android:layout_gravity="center"

            >
            <Button
                android:id="@+id/btn_comment"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:text=" Sent mail or Contact Us "
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/btn_setting_help"
                android:textColor="#FFFFFF"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Copyright Â© 2017 All Rights Reserved"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#464646"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>